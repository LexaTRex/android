<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.accesseddata.AccessedDataDetailFragment">

    <LinearLayout
        android:id="@+id/headingTextViewsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_default"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/headingTextView"
            style="@style/TextAppearance.Luca.Headline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="Datenanfrage" />

    </LinearLayout>

    <View
        android:id="@+id/headingSeparatorView"
        style="@style/HeaderSeparatorView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headingTextViewsLayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headingSeparatorView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_default"
            android:orientation="vertical">

            <TextView
                android:id="@+id/healthDepartmentTextView"
                style="@style/TextAppearance.Luca.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_default"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Gesundheitsamt Berlin Mitte" />

            <TextView
                android:id="@+id/locationTextView"
                style="@style/TextAppearance.Luca.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_default"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Restaurant Schnitzler" />

            <TextView
                android:id="@+id/timeTextView"
                style="@style/TextAppearance.Luca.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_default"
                android:fontFamily="@font/montserrat_regular"
                tools:text="23.08.2020 16.00 Uhr â€“\n24.05.2020 22.00 Uhr" />

            <TextView
                android:id="@+id/descriptionTextView"
                style="@style/TextAppearance.Luca.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                tools:text="@string/accessed_data_dialog_description" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
